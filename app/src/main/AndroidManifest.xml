<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".movie_home_feature.HiltApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp"
        tools:targetApi="31">
        <activity
            android:name=".movie_home_feature.presentation.activities.TvCategory"
            android:exported="false"
            android:label="@string/title_activity_tv_category"
            android:theme="@style/Theme.MovieApp" />
        <activity
            android:name=".movie_home_feature.presentation.activities.MoviesCategory"
            android:exported="false"
            android:label="@string/title_activity_movies_category"
            android:theme="@style/Theme.MovieApp" />
        <activity
            android:name=".movie_home_feature.presentation.activities.MovieDetails"
            android:exported="false"
            android:label="@string/title_activity_movie_details"
            android:theme="@style/Theme.MovieApp" />
        <activity
            android:name=".movie_home_feature.presentation.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>